/* dancers.wxss */

.dancers-area {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
}

.dancer-item {
  width: 95%;
  background-color: rgba(0, 0, 0, 0.1);
  margin: auto;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  border-radius: 10rpx;
}

.dancer-avatar {
  width: 30%;
  height: 140rpx;
  margin: auto;
}

.dancer-info {
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.dancer-nickname {
  height: 20%;
  padding: 15rpx 40rpx 10rpx 0rpx;
  font-weight: 600;
  font-size: 35rpx;
  color: purple;
}

.dancer-intro {
  height: 50%;
  padding: 10rpx 40rpx 15rpx 0rpx;
  font-weight: 500;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.5);
}

.button-container {
  height: 30%;
  padding: 0rpx 40rpx 15rpx 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.button {
  height: 58rpx;
  width: 30%;
  background-color: #8A2BE2;
  color: white;
  font-size: 25rpx;
  text-align: center;
  padding: 0px;
}

.button-placeholder {
  width: 30%;
}