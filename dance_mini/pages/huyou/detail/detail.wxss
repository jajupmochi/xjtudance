/* pages/huyou/detail/detail.wxss */

.pic {
  width: 100%;
  height: 422rpx;
}

.drawer_box {
  background: #FFFFFF;
  padding: 30rpx 30rpx 30rpx 30rpx;
}

.drawer_title {
  padding: 0rpx 30rpx 50rpx 0;
  font: 50rpx "microsoft yahei";
  font-weight: 700;
  font-family: Arial, Helvetica, sans-serif;
  color: #800080;
  text-align: right;
}

.drawer_item {
  width: 100%;
}

.title {
  height: 30px;
  line-height: 30px;
  width: 30%;
  text-align: justify;
  text-justify: distribute;
  display: inline-block;
  font: 600 40rpx/30px "microsoft yahei";
  color: #000000;
}

.content {
  text-align: justify;
  text-justify: distribute;
  width: 70%;
  font: 500 37rpx/50rpx "microsoft yahei";
  color: rgba(0, 0, 0, 0.8);
}

.drawer_comment {
  width: 100%;
  margin: 40rpx 0 60rpx 0;
}

.btn_ok {
  width: 100%;
  font: 40rpx/90rpx "microsoft yahei";
  text-align: center;
  border: 1px solid #e8e8ea;
  color: #800080;
  margin-bottom: 30rpx;
}