/* dancerPro.wxss */
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #fafafa;
  overflow-y: scroll;
  
}

/*content*/

.drawer_box {
  overflow: visible;
  top: 0;
  left: 0;
  background: #fafafa;
  padding: 40rpx 40rpx 40rpx 40rpx;
}

.drawer_title {
  padding: 50rpx 10rpx 50rpx 0;
  font: 50rpx "microsoft yahei";
  font-weight: 700;
  font-family: Arial, Helvetica, sans-serif;
  color: orange;
  text-align: right;
}

.drawer_content {
  width: 100%;
  padding: 0px;
}

.drawer_item {
  padding: 20rpx 0rpx 20rpx 0rpx;
}

.title {
  height: 30px;
  line-height: 30px;
  width: 100%;
  text-align: left;
  display: inline-block;
  font: 600 40rpx/30px "microsoft yahei";
  color: black;
}

.content {
  text-align: left;
  width: 100%;
  font: 500 37rpx/37rpx "microsoft yahei";
  color: rgba(0, 0, 0, 0.8);
}

.photo {
  width: 100%;
  margin: 0rpx 0rpx 0rpx 0rpx;
}

.btn_container {
  width: 100%;
  padding-top: 8px;
}

.btn_ok {
  width: 100%;
  font: 40rpx/90rpx "microsoft yahei";
  text-align: center;
  border: 1px solid #e8e8ea;
  color: #3cc51f;
}